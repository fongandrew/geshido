{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "downlevelIteration": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "outDir": "./public",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "baseUrl": ".",
        "paths": {
            "~/*": ["./src/*"]
        }
    },
    "include": [
        "src/**/*"
    ]
}