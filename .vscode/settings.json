{
	"files.exclude": {
		".cache": true,
		"node_modules": true,
		"public": true
	},
	"[javascript]": {
		"editor.formatOnSave": true
	},
	"[json]": {
		"editor.formatOnSave": true
	},
	"[typescript]": {
		"editor.formatOnSave": true
	},
	"[typescriptreact]": {
		"editor.formatOnSave": true
	},
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		{
		  "language": "typescript",
		  "autoFix": true
		},
		{
		  "language": "typescriptreact",
		  "autoFix": true
		}
	],
	"editor.insertSpaces": false
}
